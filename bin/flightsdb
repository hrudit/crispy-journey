#!/bin/bash
# flightsdb

# Stop on errors
# See https://vaneyckt.io/posts/safer_bash_scripts_with_set_euxo_pipefail/
set -Eeuo pipefail

# Sanity check command line options
usage() {
  echo "Usage: $0 (create|destroy|reset|dump)"
}

if [ $# -ne 1 ]; then
  usage
  exit 1
fi

# Parse argument.  $1 is the first argument
case $1 in
  "create")
    if [[ -e var/insta485.sqlite3 || -e var ]]; then
    echo "var/insta485.sqlite3 or var exists"
    exit 1
    fi
    mkdir var
    sqlite3 var/insta485.sqlite3 < sql/schema.sql
    sqlite3 var/insta485.sqlite3 < sql/data.sql
    ;;

  "destroy")
    rm -rf var/insta485.sqlite3
    rm -rf var
    ;;

  "reset")
    rm -rf var/insta485.sqlite3
    rm -rf var
    mkdir var
    sqlite3 var/insta485.sqlite3 < sql/schema.sql
    sqlite3 var/insta485.sqlite3 < sql/data.sql
    ;;

  "dump")
    sqlite3 -batch -line var/insta485.sqlite3 'SELECT * FROM trips'
    ;;
  *)
    usage
    exit 1
    ;;
esac